@{
    ViewData["Title"] = "Home Page";
}

<section class="site-section element-animate">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 order-md-2">
                <div class="block-16">
                    <figure>
                        <img src="images/img_1.jpg" alt="Image placeholder" class="img-fluid">
                    </figure>
                </div>
            </div>
            <div class="col-md-6 order-md-1">
                <div class="block-15">
                    <div class="heading">
                        <h2>Welcome to the University</h2>
                    </div>
                    <div class="text mb-5">
                        <p>
                            The mission of IITM is to develop the country's intellectual, scientific and technical potential in the field of ICT based on the integration of education,
                            breakthrough innovative technologies and research
                        </p>
                    </div>
                    <p><a asp-area="" asp-controller="Home" asp-action="About" class="btn btn-primary reverse py-2 px-4">More detailed</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END section -->

<section class="site-section pt-3 element-animate">
    <div class="container">
        <div class="row">
            <div class="col-md-7 text-center section-headin">
                <h2 class="text-primary heading">ADVANTAGES OF THE UNIVERSITY</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-3">
                <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-book"></span></div>
                    <div class="media-body">
                        <h3 class="heading">Unique educational programs</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-student"></span></div>
                    <div class="media-body">
                        <h3 class="heading">Exchange programs and internships abroad</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-diploma"></span></div>
                    <div class="media-body">
                        <h3 class="heading">Participation in international IT competitions and Olympiads</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-professor"></span></div>
                    <div class="media-body">
                        <h3 class="heading">High scientific and pedagogical potential</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END section -->

